<%= form_for @user do |f| %>

  <% if attributes.include? :name %>
    <label>Name:</label>
    <%= f.text_field :name %>
    <br/>
  <% end %>

  <% if attributes.include? :privilege %>
    <label>Privilege:</label>
    <%= f.select :privilege, options_for_select(PRIVILEGE_HUMAN_NAMES.to_a.map(&:reverse), @user.privilege) %>
    <br/>
  <% end %>

  <%= f.submit 'Save' %>

<% end %>
